generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  document      String?    @unique
  documentType  String?    @default("BR:CPF")
  emailVerified DateTime?
  avatar        String?
  password      String?
  phone         String?    @unique
  isAdmin       Boolean    @default(false)
  isTrial       Boolean    @default(false)
  trialStart    DateTime?
  trialEnd      DateTime?
  instances     Instance[]
  Plan          Plan?      @relation(fields: [planId], references: [id])
  planId        String?

  @@map("users")
}

model Instance {
  id                   String    @id @default(cuid())
  instanceName         String
  connectedPhone       String?
  picture              String?
  profileStatus        String?
  name                 String?
  state                String?
  status               String    @default("DISCONNECTED")
  contacts             Int       @default(0)
  chats                Int       @default(0)
  messagesSent         Int       @default(0)
  messagesReceived     Int       @default(0)
  platform             String?   @default("smba")
  connected            Boolean   @default(false)
  isActive             Boolean   @default(false)
  blocked              Boolean   @default(false)
  automaticReading     Boolean   @default(false)
  rejectCalls          Boolean   @default(false)
  syncContacts         Boolean   @default(false)
  disconnectedBySystem Boolean   @default(false)
  rejectCallsMessage   String?   @default("NÃ£o posso atender chamadas no momento.")
  token                String    @unique @default(cuid())
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  deletedAt            DateTime?
  User                 User?     @relation(fields: [userId], references: [id])
  userId               String?
  webhooks             Webhook[]

  @@map("instances")
}

model Webhook {
  id         String   @id @default(uuid())
  instance   Instance @relation(fields: [instanceId], references: [id])
  instanceId String
  name       String   @default("Webhook")
  url        String
  events     String[] @default([]) @db.Text
  enabled    Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("webhooks")
}

model Plan {
  id           String    @id @default(uuid())
  name         String
  price        Int
  type         String    @default("MONTHLY")
  private      Boolean   @default(false)
  status       String    @default("ACTIVE")
  maxInstances Int       @default(1)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  deletedAt    DateTime?
  users        User[]
}
